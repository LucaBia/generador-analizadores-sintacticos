letra = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ".
digito = "01234567890".
digitoHex = digito + "ABCDEF".
enBlanco = CHR(9) + CHR(32).
hola = CHR(43).
cualquiera = letra + digito + enBlanco.


KEYWORDS

si = "if".
para = "for".
mientras = "while".
MIENTRAS = "WHILE".
